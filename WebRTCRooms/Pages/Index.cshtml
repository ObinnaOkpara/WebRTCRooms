@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 col-sm-6 col-10">
            <div class="w-100">
                <h3>Create New Room</h3>
                <div class="form-group">
                    <label>Room Name</label>
                    <input id="roomname" class="form-control" type="text"/>
                </div>
                <div class="form-group">
                    <button id="submitroom" class="btn btn-primary">Create Room</button>
                </div>
            </div>
            <h3 class="mt-3">Open rooms</h3>
            <div id="rooms" class="w-100">
                
            </div>
        </div>
    </div>
</div>

<script src="~/lib/signalr/dist/browser/signalr.min.js" defer></script>
<script src="~/js/rooms.js" defer></script>