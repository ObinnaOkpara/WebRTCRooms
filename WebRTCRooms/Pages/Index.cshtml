@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 col-sm-6 col-10">
            <div class="w-100">
                <h3>Create New Room</h3>
                <div class="form-group">
                    <label>Room Name</label>
                    <input id="roomname" class="form-control" type="text"/>
                </div>
                <div class="form-group">
                    <button id="submitroom" class="btn btn-primary">Create Room</button>
                </div>
            </div>
            <div class="w-100">
                <div class="my-2 w-100 float-left">
                    <h3 class="mt-3 w-75 float-left">Open rooms</h3>
                    <button id="refreshBtn" class="mt-3 w-25 float-left btn btn-outline-dark">refresh</button>
                </div>
            </div>
            <div class="w-100">
                <div id="rooms" class="my-2 w-100">
                    <span class="spinner-border"></span>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/signalr/dist/browser/signalr.min.js" defer></script>
<script src="~/js/rooms.js" defer></script>